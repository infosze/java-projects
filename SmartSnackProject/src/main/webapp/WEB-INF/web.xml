	</servlet>
	<servlet-mapping>
		<servlet-name>MachineEditServlet</servlet-name>
		<url-pattern>/editmachine</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>MachineEditServlet2</servlet-name>
