<?xml version="1.0" encoding="UTF-8"?>

<web-app 
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">


	<listener>
		<listener-class>servlet.listener.BackGroundJobManager</listener-class>
	</listener>

	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<servlet-class>servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>TasksServlet</servlet-name>
		<servlet-class>servlet.TasksServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>TasksServlet</servlet-name>
		<url-pattern>/tasks</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Query1Servlet</servlet-name>
		<servlet-class>servlet.Query1Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Query1Servlet</servlet-name>
		<url-pattern>/query1</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Query2Servlet</servlet-name>
		<servlet-class>servlet.Query2Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Query2Servlet</servlet-name>
		<url-pattern>/query2</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>Query3Servlet</servlet-name>
		<servlet-class>servlet.Query3Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Query3Servlet</servlet-name>
		<url-pattern>/query3</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Query5Servlet</servlet-name>
		<servlet-class>servlet.Query5Servlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Query5Servlet</servlet-name>
		<url-pattern>/query5</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>LogoutServlet</servlet-name>
		<servlet-class>servlet.LogoutServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>LogoutServlet</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	
</web-app>
